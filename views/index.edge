<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/design/blog.css">
  <script src="https://cdn.onesignal.com/sdks/OneSignalSDK.js" async=""></script>
<script>
  window.OneSignal = window.OneSignal || [];
  OneSignal.push(function() {
    OneSignal.init({
      appId: "a9bf4269-cb79-4999-8a92-0d3857243cad",
    });
  });
</script>
   <!-- Favicons -->
   <link
   rel="apple-touch-icon"
   sizes="180x180"
   href="icons/apple-touch-icon.png"
 />
 <link
   rel="icon"
   type="image/png"
   sizes="32x32"
   href="icons/favicon-32x32.png"
 />
 <link
 rel="icon"
 type="image/png"
 sizes="512x512"
 href="icons/android-chrome-512x512.png"
/>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <title>Abdurrahim Ahmadov | Blog</title>
  <!--Css-->
</head>
<body>
  <script src="https://kit.fontawesome.com/7566c6a24f.js" crossorigin="anonymous"></script>
  <div id="coverScreen"  class="LockOn">
  </div>
  
  <!-- Navbar -->
  <nav>
    <a href="/"><h1>Abdurrahim Ahmadov</h1></a>
    <ul class="navigation">
      <li><a href="/" class="nav-link">Portfilo</a></li>
      <li><a href="/blog" class="nav-link">Blog</a></li>
      @if(!id)
      <li><a href="blog/user/login" class="nav-link">Login</a></li>
      @else
      <li><a href="/user/logout" class="nav-link">Log out</a></li>
      @endif
      @if(isAdmin==='true')
      <li><a href="/admin" class="nav-link">Admin page</a></li>
      @endif

    </ul>
    <button class="burger-menu" id="burger-menu">
      <ion-icon class="bars" name="menu-outline"></ion-icon>
    </button>
</nav>
  

  <div class="container">
    <h1 id="section-id">My recent articles</h1>
    @each(post in posts)
    <div class="card">
      <div class="wrap">
      <div class="card-image">
        <img src="{{post.image}}">
      </div>
      <hr>
      <div class="card-info">
        <h2> <a class="link" href="/blog/{{post.slug}}">{{post.title}}</a>  <p><span class="time"><i class="fa fa-calendar-o icon" aria-hidden="true"></i>  {{post.date.toLocaleDateString()}} <i class="fa fa-clock-o icon" aria-hidden="true"></i>   {{post.date.toLocaleTimeString()}}</span><p></h2>
        <div class="author">
          
          <img  src="/icons/abdurrahim.jpg">
          <h5><i class="fa fa-user icon" aria-hidden="true"></i> {{post.author}} | <i class="fa fa-facebook-official" aria-hidden="true"></i> <i class="fa fa-github" aria-hidden="true"></i> <i class="fa fa-twitter" aria-hidden="true"></i></h5>
        </div>
  
        <p> {{post.description}}</p>
        <p>
          <div id="bottomPost"></div>
          <div id="tag">
            <div>
            <i class="fa fa-tags" aria-hidden="true"></i> 
            
          @each(tag in post.tags)
          <a class="tag" href="/blog/tags/{{tag}}">{{tag}}</a>
          @endeach
            </div>
            <div id="commentCount"><i class="fas fa-comments comment"></i> {{post.comment.length}}</div>
        </p>
      </div>
      </div>
      </div>
    </div>
    @endeach
  </div>

  <div id="pagination">
    <div class="pageBtn" id="pageBtn">
     
    </div>
  </div>
  
   <!-- Footer section -->
   <footer>
    <div id="footer">
      <h1>Copyright Abdurrahim</h1>
      <p>Full-stack javascript web developer</p>
      <p>All rights reserverd.</p>
    </div>
  </footer>


  
  <script src="https://use.fontawesome.com/e2bdda476d.js"></script>
 <script src="/js/blog.js"></script>
</body>
</html>



  

